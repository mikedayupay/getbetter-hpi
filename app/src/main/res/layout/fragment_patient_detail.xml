<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.dlsu.thesis.getbetter.PatientDetailFragment"
    >

    <TextView  android:id="@+id/patient_detail"
        android:text="Patient Information"
        style="?android:attr/textAppearanceLarge" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="16dp" android:textIsSelectable="true"
        />

    <View
        android:id="@+id/title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:minHeight="1dp"
        android:layout_below="@id/patient_detail"
        />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@id/title_divider"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/name_label"
        android:layout_alignBottom="@id/name_label"/>

    <TextView
        android:id="@+id/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate: "
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/name_label"
        android:layout_alignLeft="@id/name_label"
        android:layout_alignStart="@id/name_label"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_toRightOf="@id/age_label"
        android:layout_toEndOf="@id/age_label"
        android:layout_alignBottom="@id/age_label"/>

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/age_label"
        android:layout_alignLeft="@id/age_label"
        android:layout_alignStart="@id/age_label"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/patient_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_toRightOf="@id/gender_label"
        android:layout_toEndOf="@id/gender_label"
        android:layout_alignBottom="@id/gender_label"/>

    <TextView
        android:id="@+id/civil_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Civil Status: "
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/gender_label"
        android:layout_alignLeft="@id/gender_label"
        android:layout_alignStart="@id/gender_label"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/patient_civil_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_toRightOf="@id/civil_status_label"
        android:layout_toEndOf="@id/civil_status_label"
        android:layout_alignBottom="@id/civil_status_label"/>

    <TextView
        android:id="@+id/blood_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type: "
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/civil_status_label"
        android:layout_alignLeft="@id/civil_status_label"
        android:layout_alignStart="@id/civil_status_label"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/patient_blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_toRightOf="@id/blood_type_label"
        android:layout_toEndOf="@id/blood_type_label"
        android:layout_alignBottom="@id/blood_type_label"/>

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/blood_type_label"
        android:layout_alignLeft="@id/blood_type_label"
        android:layout_alignStart="@id/blood_type_label"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/patient_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_toRightOf="@id/address_label"
        android:layout_toEndOf="@id/address_label"
        android:layout_alignBottom="@id/address_label"/>

    <ImageView
        android:id="@+id/patient_display_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profilepic"
        android:contentDescription="Profile Picture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_divider"/>




</RelativeLayout>

