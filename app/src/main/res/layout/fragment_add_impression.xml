<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context="com.dlsu.thesis.getbetter.AdminNavPages.AddImpressionFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/impression_detail_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/impression_detail_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Impression Details"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_below="@id/impression_detail_card_title">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_medical_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <EditText
                        android:id="@+id/input_medical_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Medical Term"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_scientific_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_scientific_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Scientific Term"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_local_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_local_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Local Term"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_treatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Treatment Protocol"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:scrollbars="vertical"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Additional Remarks"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:scrollbars="vertical"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/add_impression_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary"
                android:text="Done"
                android:textSize="36sp"
                android:textColor="#FFF"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/match_complaint_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/complaint_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Select Chief Complaints"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/complaint_content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/complaint_card_title"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/admin_check_fever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fever"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pain"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_injury_wound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Injury/Wound"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_skin_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Problem"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_respiratory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breathing/Respiratory Issues"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_bowel_vomiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bowel movement/Vomiting"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>

                <CheckBox
                    android:id="@+id/admin_check_general_unwellness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Unwellness"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:onClick="onCheckBoxClicked"/>


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/match_symptom_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/match_symptom_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Select Symptoms"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/symptom_content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/match_symptom_card_title"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:scrollbars="vertical">


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
